{% extends 'front/base.html.twig' %}

{% block metaTitle %}
    Liste des articles
{% endblock metaTitle %}


{% block main %}
    <h1>Il y a {{ articles | length }} articles dans la base de donn√©es</h1>
    <div class="articles-container">
        {% for article in articles %}
            {% if article.isPublished %}
                <article class="article">
                    <h2>{{ article.title | upper }}</h2>
                    <p>{{ article.content }}</p>
                    <a href="{{ path('article_list', {'id': article.id }) }}">Voir plus</a>
                </article>
            {% endif %}
        {% endfor %}
    </div>
{% endblock main %}