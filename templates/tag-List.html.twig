{% extends 'base.html.twig' %}

{% block metaTitle %}
    Tag List
{% endblock metaTitle %}

{% block main %}

    <div class="tag-container">
        {% for tag in tags %}
            <article class="tag">
                <p style="background-color: {{ tag.color }}">{{ tag.title }}</p>
                <a href="{{ path('tagShow', {'id': tag.id }) }}">See More</a>
            </article>
        {% endfor %}
    </div>

{% endblock %}